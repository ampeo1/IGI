@{
}
<h2>Администраторы</h2>
<table class="table">
    @foreach (User user in Model.Users)
    {
        <tr>
            <td>@user.UserName</td>
            <td>
                <form asp-action="Edit" asp-route-id="@user.Id" method="post">
                        @if (Model.Admins.Contains(user))
                        {
                           <button type="submit" class="btn btn-sm btn-danger"> Убрать админку </button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-sm btn-danger"> Сделать администратором</button>
                        }
                </form>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger"> Забанить </button>
                </form>
            </td>
        </tr>
    }
</table>