<div class="container marketing" style="margin-top: 20px">
    <div class="row">
        @foreach (User user in Model)
        {

            <div class="col-lg-4" style="text-align: center; background: #f5f5f5;">
                <img src="@Url.Content(user.Path)" width="140" height="140"/>
                <h2>@user.UserName</h2>
                <p>@user.Name @user.Surname</p>
                <p><a class="btn btn-secondary" asp-area="" asp-controller="Users" asp-action="Page" asp-route-id="@user.Id">Посмотреть профиль &raquo;</a></p>
            </div><!-- /.col-lg-4 -->
        }
    </div>
</div>

